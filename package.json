{
  "name": "nodejs-mentoring",
  "version": "1.0.0",
  "description": "folder with NodeJs Mentoring 2018Q4 tasks",
  "main": "src/app.js",
  "scripts": {
    "server:plain-text": "node ./src/http-servers​/plain-text-server.js",
    "server:html": "node ./src/http-servers​/html-server.js",
    "server:json": "node ./src/http-servers​/json-server.js",
    "server:echo": "node ./src/http-servers​/echo-server.js",
    "tools:dockerStart": "docker-compose -f ./tools/docker/docker-compose.yml up",
    "tools:initDB": "node ./tools/scripts/initDB.js",
    "dev": "nodemon -r @babel/register ./src/index.js",
    "start": "node -r @babel/register ./src/index.js",
    "build": "babel ./src/ --out-dir dist",
    "lint": "eslint ./src/"
