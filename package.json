  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.12.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.20",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
